---
interface Props {
    id: string;
    class: string;
    onclick: string;
}

const { id, class:className, onclick } = Astro.props;
---

<button id={ id } class={ className } onclick={ onclick }>
    <slot />
</button>

<style>
    button {
        height: 44px;
        font-size: var(--font-size);
        color: inherit;
        cursor: pointer;
        padding: 12px 24px 12px 24px;
        margin: 0;
        border: none;
        border-radius: 50px;
        background-color: #d3d3d3;
        box-shadow: inset 10px 10px 32px -16px #FFFFFF;
        transition: transform 0.2s;
    }
    @media (prefers-color-scheme: dark) {
        button {
            background-color: #3A3A3AFF;
            box-shadow: inset 10px 10px 32px -22px #FFFFFF;
        }
    }
    button:hover {
        transform: scale(1.025);
    }
</style>