<style>
    nav {
        --bg-color: var(--nav-background);

        top: 0;
        position: sticky;
        background-color: var(--bg-color);
        height: 4em;
        padding: 0 15%;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        isolation: isolate;
        z-index: 99;
        gap: 1.5em;
    }
    nav a {
        color: inherit;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.2s ease-in-out;
        cursor: pointer;
    }
    nav > button {
        appearance: none;
        display: flex;
        flex-direction: column;
        gap: 0.25em;
        cursor: pointer;
        order: 1;
        border: none;
        background-color: unset;
    }
    nav > button:focus {
        outline: solid var(--text);
        outline-offset: 0.125em;
    }
    nav > button > span {
        display: inline-block;
        width: 1.5em;
        height: 0.25em;
        background-color: var(--text);
        border-radius: 16px;
        transform-origin: right;
        transition: transform 0.2s ease-in-out;
    }
    nav.open > button > span:nth-child(1) {
        transform: translateY(-0.28em) rotate(-45deg);
    }
    nav.open > button > span:nth-child(2) {
        transform: translateY(0.28em) rotate(45deg);
    }
    nav > div:nth-child(2) {
        font-weight: 700;
        font-size: 1.2em;
    }
    nav > div:nth-child(3) > ul {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        gap: 4em;
        opacity: 1;
    }
    nav > div:nth-child(3) > ul > li {
        padding: 1.5em 0 1.5em 0;
    }
    nav > div:nth-child(3) > ul > li > ul {
        position: absolute;
        display: flex;
        flex-direction: column;
        gap: 0.5em;
        left: 0;
        right: 0;
        top: 4em;
        background-color: var(--bg-color);
        padding: 0 15% 2em 15%;
        transform: scale(1,0);
        transform-origin: top;
        transition: transform 0.2s ease-in-out 0.3s, background-color 0.2s ease-in-out;
        list-style: none;
    }
    nav > div:nth-child(3) > ul > li > ul > li {
        opacity: 0;
        transition: opacity 0.1s ease-in-out 0.1s;
        margin: 0;
    }
    nav > div:nth-child(3) > ul > li > ul > li > button {
        margin-left: auto;
        padding: 0;
        color: var(--text);
        display: flex;
        align-items: center;
        cursor: pointer;
        appearance: none;
        border: none;
        background-color: unset;
        font-size: 1em;
        font-weight: 600;
        gap: 0.75em;
    }
    nav > div:nth-child(3) > ul > li > ul > li > button > span {
        display: flex;
        gap: 0.75em;
        flex-direction: column;
    }
    nav > div:nth-child(3) > ul > li > ul > li > button > span > span {
        display: inline-block;
        width: 0.75em;
        height: 0.2em;
        background-color: var(--text);
        transform-origin: right;
    }
    nav > div:nth-child(3) > ul > li > ul > li > button > span > span:nth-child(1) {
        transform: rotate(-45deg);
    }
    nav > div:nth-child(3) > ul > li > ul > li > button > span > span:nth-child(2) {
        transform: rotate(45deg);
    }
    nav > div:nth-child(4) {
        /*display: none;*/
    }

    @media screen and (min-width: 1301px) {
        nav a:hover {
            color: var(--accent);
        }
        nav > button {
            display: none;
        }
        nav > div:nth-child(3) > ul > li > ul > li > button {
            display: none;
        }
        nav > div:nth-child(3) > ul > li:hover > ul, nav > div:nth-child(3) > ul > li:focus-within > ul {
            transform: scale(1,1);
            transition: transform 0.2s ease-in-out;
        }
        nav > div:nth-child(3) > ul > li:hover > ul > li, nav > div:nth-child(3) > ul > li:focus-within > ul > li {
            opacity: 1;
            transition: opacity 0.2s ease-in-out 0.3s;
        }
    }
    @media screen and (max-width: 1300px) {
        nav {
            padding: 0 5%;
        }
        nav > div:nth-child(2) {
            flex-grow: 1;
        }
        nav > div:nth-child(3) {
            visibility: hidden;
            padding: 0 5%;
            position: fixed;
            right: 0;
            left: 0;
            top: 4em;
            bottom: 0;
            background-color: var(--bg-color);
            transform: scale(1,0);
            transform-origin: top;
            transition: transform 0.2s ease-in-out 0.3s, background-color 0.2s ease-in-out, visibility 0s 0.5s;
        }
        nav.open > div:nth-child(3) {
            visibility: initial;
            transform: scale(1,1);
            transition: transform 0.2s ease-in-out, visibility 0s;
        }
        nav > div:nth-child(3) > ul {
            overflow: auto;
            max-height: calc(100dvh - 3em);
            flex-direction: column;
            gap: 1em;
            opacity: 0;
            text-align: right;
            transition: opacity 0.2s ease-in-out;
        }
        nav.open > div:nth-child(3) > ul {
            opacity: 1;
            transition: opacity 0.2s ease-in-out 0.3s;
        }
        nav > div:nth-child(3) > ul > li {
            display: block;
            margin: 0;
            padding: 0;
        }
        nav > div:nth-child(3) >ul > li > ul {
            overflow: auto;
            max-height: calc(100dvh - 3em);
            gap: 1em;
            visibility: hidden;
            inset: 0;
            padding: 0 5%;
            transform: scale(1,0);
            transform-origin: top;
            transition: transform 0.2s ease-in-out 0.3s, visibility 0s 0.5s;
        }
        nav > div:nth-child(3) > ul > li > ul > * {
            display: unset;
            opacity: 0;
            transition: opacity 0.2s ease-in-out;
        }
        nav > div:nth-child(3) > ul > li > ul.open {
            visibility: initial;
            transform: scale(1,1);
            transition: transform 0.2s ease-in-out, visibility 0s;
        }
        nav > div:nth-child(3) > ul > li > ul.open > * {
            opacity: 1;
            transition: opacity 0.2s ease-in-out 0.3s;
        }
    }
</style>
<script is:inline>
    function toggle() {
        document.querySelector('nav').classList.toggle('open');
    }

    function NavMenuOpen(element, e) {
        e.preventDefault();
        element.parentElement.querySelector('ul').classList.add('open');
    }
    function NavMenuClose(element) {
        element.parentElement.parentElement.classList.remove('open');
    }
</script>