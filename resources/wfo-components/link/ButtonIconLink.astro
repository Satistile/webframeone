---
interface Props {
    id: string;
    class: string;
    href: string;
}

const { id, class:className, href } = Astro.props;
---

<a id={ id } href={ href } class={ className }>
    <slot />
</a>

<style>
    a {
        width: 44px;
        height: 44px;
        font-size: var(--font-size);
        color: inherit;
        cursor: pointer;
        padding: 12px;
        margin: 0;
        border: none;
        border-radius: 16px;
        background-color: #d3d3d3;
        box-shadow: inset 10px 10px 32px -16px #FFFFFF;
        transition: transform 0.2s;
        display: inline-flex;
        justify-content: center;
        box-sizing: border-box;
    }
    @media (prefers-color-scheme: dark) {
        a {
            background-color: #3A3A3AFF;
            box-shadow: inset 10px 10px 32px -22px #FFFFFF;
        }
    }
    a:hover {
        transform: scale(1.025);
    }
</style>