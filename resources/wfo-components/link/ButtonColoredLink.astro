---
interface Props {
    id: string;
    class: string;
    color: string;
    href: string;
}

const { id, class:className, color, href } = Astro.props;
---

<a id={ id } href={ href } class={ className }>
    <slot />
</a>

<style define:vars={{ color }}>
    a {
        height: 20px;
        font-size: var(--font-size);
        text-decoration: none;
        color: inherit;
        cursor: pointer;
        padding: 12px 24px 12px 24px;
        margin: 0;
        border: none;
        border-radius: 50px;
        background: var(--color) 100%;
        box-shadow: inset -4px -4px 8px -4px rgba(0, 0, 0, 0.4), inset 4px 4px 8px -4px rgb(255, 255, 255), 0 0 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s;
        display: inline-block;
    }
    @media (prefers-color-scheme: dark) {
        a {
            box-shadow: inset -4px -4px 8px -4px rgba(0, 0, 0, 0.85), inset 4px 4px 8px -4px rgb(255, 255, 255), 0 0 4px -1px rgb(255, 255, 255);
        }
    }
    a:hover {
        transform: scale(1.025);
    }
</style>