---
interface Props {
    id: string;
    class: string;
    class: string;
    href: string;
}

const { id, class:className, color, href } = Astro.props;
---

<a id={ id } href={ href } class={ className }>
    <slot />
</a>

<style define:vars={{ color }}>
    a {
        width: 44px;
        height: 44px;
        font-size: var(--font-size);
        color: inherit;
        cursor: pointer;
        padding: 12px;
        margin: 0;
        border: none;
        border-radius: 16px;
        background-color: var(--color);
        box-shadow: inset -4px -4px 8px -4px rgba(0, 0, 0, 0.4), inset 4px 4px 8px -4px rgb(255, 255, 255), 0 0 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s;
        display: inline-flex;
        justify-content: center;
        box-sizing: border-box;
    }
    @media (prefers-color-scheme: dark) {
        a {
            box-shadow: inset -4px -4px 8px -4px rgb(0, 0, 0), inset 4px 4px 8px -4px rgba(255, 255, 255, 0.8), 0 0 4px -1px rgb(255, 255, 255);
        }
    }
    a:hover {
        transform: scale(1.025);
    }
</style>