---
interface Props {
    id: string;
    class: string;
}

const { id, class:className } = Astro.props;
---

<div id={ id } class={ className }>
    <slot />
</div>
<style>
    div {
        padding: 32px;
        border-radius: 16px;
        box-shadow: inset 0 0 1px #777;
        background: linear-gradient(355deg, rgba(150,150,150,0.4) 0%, rgba(255,255,255,0.4) 100%);
        backdrop-filter: blur(16px);
    }
    @media (prefers-color-scheme: dark) {
        div {
            box-shadow: inset 0 0 1px #FFFFFF;
            background: linear-gradient(355deg, rgba(44, 44, 44, 0.4) 0%, rgba(115, 115, 115, 0.4) 100%);
        }
    }
</style>